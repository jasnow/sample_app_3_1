source 'http://rubygems.org'

gem 'rails'

gem 'gravatar_image_tag'

gem 'will_paginate'

# Asset template engines
gem 'sass-rails'
gem 'coffee-script'
gem 'uglifier'

gem 'jquery-rails'

group :development, :test do
  gem 'sqlite3'
  gem 'sqlite3-ruby'
end

group :development do
  gem 'rspec-rails'
  gem 'annotate'
  gem 'faker'
end

group :test do
  gem 'rspec-rails'
  gem 'webrat'
  gem 'spork'
  gem 'factory_girl_rails'

  # Pretty printed test output
  gem 'turn', :require => false
end
